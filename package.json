{
  "name": "declaracion-servidores-publicos",
  "version": "1.0.0",
  "private": true,
  "description": "Graphql API",
  "scripts": {
    "build": "rimraf ./build && tsc && copyfiles -u 1 src/**/*.graphql build/ && copyfiles -a -u 1 src/**/*.json build/",
    "lint": "eslint . --ext .ts --cache --fix",
    "start": "npm run build && node build/server.js",
    "start:dev": "nodemon",
    "test": "nyc mocha --recursive --exit --require ts-node/register './src/**/tests/*.test.ts'"
  },
  "license": "UNLICENSED",
  "keywords": [
    "GraphQL",
    "Mongoose"
  ],
  "engines" : { "node" : "^14" },
  "dependencies": {
    "@elastic/elasticsearch": "~7.12.0",
    "@graphql-tools/load-files": "~6.3.1",
    "@graphql-tools/merge": "~6.2.11",
    "@graphql-tools/stitch": "~7.4.0",
    "@sendgrid/mail": "~7.4.2",
    "@types/http-errors": "~1.8.0",
    "apollo-server-express": "~2.22.2",
    "axios": "~0.21.1",
    "body-parser": "~1.19.0",
    "cors": "~2.8.5",
    "dotenv": "~8.2.0",
    "express": "~4.17.1",
    "express-jwt": "~6.0.0",
    "graphql": "~15.5.0",
    "graphql-auth-directives": "~2.2.2",
    "graphql-compose": "~7.25.1",
    "graphql-custom-types": "~1.6.0",
    "graphql-type-json": "~0.3.2",
    "http-errors": "~1.8.0",
    "http-status-codes": "~2.1.4",
    "jsonwebtoken": "~8.5.1",
    "localized-strings": "~0.2.4",
    "md5": "~2.3.0",
    "mongodb": "~3.6.5",
    "mongoose": "~5.12.3",
    "mongoose-paginate-ts": "~1.2.0",
    "ms": "~2.1.2",
    "reflect-metadata": "~0.1.13"
  },
  "devDependencies": {
    "@types/chai": "~4.2.15",
    "@types/express": "~4.17.11",
    "@types/express-jwt": "~6.0.1",
    "@types/jsonwebtoken": "~8.5.1",
    "@types/md5": "~2.3.0",
    "@types/mocha": "~8.2.2",
    "@types/ms": "~0.7.31",
    "@typescript-eslint/eslint-plugin": "~4.20.0",
    "@typescript-eslint/parser": "~4.20.0",
    "chai": "~4.3.4",
    "copyfiles": "~2.4.1",
    "eslint": "~7.23.0",
    "graphql-tools-types": "~1.3.1",
    "husky": "~6.0.0",
    "mocha": "~8.3.2",
    "nodemon": "~2.0.7",
    "nyc": "~15.1.0",
    "rimraf": "~3.0.2",
    "ts-node": "~9.1.1",
    "typescript": "~4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run build && npm run test"
    }
  }
}
